{
  "name": "translation-files",
  "version": "0.1.4",
  "description": "Extract all translation files from typescript source code. Clean output format that can be used by translators.",
  "main": "lib/main.js",
  "types": "types/main.d.ts",
  "typings": "types/main.d.ts",
  "bin": {
    "translation-files": "./bin/translation-files.js"
  },
  "keywords": [
    "translations",
    "localisation",
    "react",
    "node",
    "javascript",
    "localization ",
    "translate"
  ],
  "scripts": {
    "build:cjs": "tsc --declarationdir types",
    "build:es": "tsc -m esNext --outDir esm --declaration false",
    "build": "npm run build:cjs && npm run build:es",
    "lint": "eslint --ext .js,.ts",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.js\"",
    "clean": "rimraf lib esm types",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags && npm publish"
  },
  "files": [
    "lib",
    "esm",
    "types"
  ],
  "author": "Thomas Dekiere",
  "repository": {
    "type": "git",
    "url": "https://github.com/thdk/translation-files.git"
  },
  "license": "MIT",
  "dependencies": {
    "commander": "^6.2.0",
    "del": "^6.0.0",
    "glob": "^7.1.6",
    "merge2": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}